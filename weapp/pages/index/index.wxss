.formblock {
  opacity: 0.2;
  position: absolute;
  top: 0;
  left: 0;
  width: 100%;
  height: 100%;
  z-index: 10;
}
.formblock .button_nostyle {
  background: red;
  width: 100%;
  height: 100%;
}
page {
  background: #1E1A19;
}
.contentBox {
  /* height: 380/@p; */
  padding-top: 40rpx;
  box-sizing: border-box;
  width: 100%;
  background: #1E1A19;
  overflow: hidden;
  position: relative;
}
.contentBox .topswiper {
  position: relative;
  height: 354rpx;
}
.contentBox .GoodInfo {
  display: flex;
  flex-direction: column;
  height: 300rpx;
  overflow: hidden;
  width: 702rpx;
  position: relative;
  background: #ffffff;
  box-shadow: 0px 0px 10rpx 6rpx rgba(1, 1, 1, 0.1);
  border-radius: 12rpx 12rpx 0 0;
  /* padding: 32/@p 24/@p; */
  box-sizing: border-box;
  margin: 0 auto;
  margin-bottom: 40rpx;
  border: 4rpx solid #e9b37e;
}
.contentBox .GoodInfo .slide-image {
  width: 702rpx;
  height: 300rpx;
}
.contentBox .swiperdots {
  position: absolute;
  right: 40rpx;
  z-index: 100;
  display: flex;
  bottom: 74rpx;
}
.contentBox .swiperdots .dots {
  margin-left: 10rpx;
  background: rgba(46, 38, 32, 0.4);
  height: 12rpx;
  width: 12rpx;
  border-radius: 6rpx;
  transition: all 0.3s ease-in-out;
}
.contentBox .swiperdots .curSwiperdot {
  width: 40rpx;
  background: #2e2620;
}
.contentBox .LiveBottom {
  height: 54rpx;
  line-height: 54rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 12rpx;
  color: #CD9967;
  align-items: center;
  box-sizing: border-box;
  width: 706rpx;
  margin: 0 auto;
  background: #2E2620;
  border-radius: 0 0 8rpx 8rpx;
}
.contentBox .LiveBottom > div,
.contentBox .LiveBottom > view {
  line-height: 54rpx;
  font-size: 24rpx;
}
.contentBox .LiveBottom .iconfont {
  color: #FE1969;
  margin-right: 10rpx;
  font-size: 28rpx;
}
.contentBox .tabList {
  margin-top: 30rpx;
  background: linear-gradient(180deg, #2e2620 0%, #1e1a19 100%);
  height: 72rpx;
  display: flex;
  justify-content: space-around;
  border-bottom: 1px solid #2e2620;
}
.contentBox .tabList > div,
.contentBox .tabList > view {
  text-align: center;
  font-size: 28rpx;
  line-height: 72rpx;
}
.contentBox .tabList .currGoods {
  color: #cd9967;
  font-weight: 600;
}
.contentBox .tabList .zcTitle {
  color: rgba(205, 153, 103, 0.8);
}
.contentBox .GoodsList {
  width: 100%;
  border-radius: 18rpx 18rpx 0 0;
  box-sizing: border-box;
  padding: 20rpx;
  /* background: #482D1F; */
  margin: 0 auto;
}
swiper {
  height: 300rpx;
}

