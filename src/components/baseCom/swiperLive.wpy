      display: flex;
      width: 100%;
      justify-content: space-around;
      margin-top: 32/@p;
      .goods{
        width: 100/@p;
        height: 100/@p;
        border-radius: 8/@p;
        background: gray;
        overflow: hidden;
        .image{
          width: 100/@p;
          height: 100/@p;
        }
      }
      .goodsNum{
        font-size: 20/@p;
        text-align: center;
        padding: 20/@p 10/@p 24/@p;
        background: #FFF3F3;
        color: #FE1969;
      }
