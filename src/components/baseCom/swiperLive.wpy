<style lang="less">
@import "~@/utils/pt2rem.less";
.LiveWin{
  width: 702/@p;
  height: 300/@p;
  margin: 0 auto;
  background: rgba(254,247,241,1);
  border-radius: 8/@p 8/@p 0 0;
  display: flex;
  overflow: hidden;
  box-sizing: border-box;
  border:4/@p solid rgba(233,179,126,1);
  .LiveCover{
    width: 256/@p;
    height: 296/@p;
    position: relative;
    .LiveStatus{
      font-size: 22/@p;
      color: #fff;
      position: absolute; 
      top: 12/@p;
      left: 22/@p;
      width: 120/@p;
      display: flex;
      align-items: center;
      justify-content: space-around;
      background: rgba(1,1,1,.4);
      border-radius: 8/@p;
      .status{
        width: 16/@p;
        height: 16/@p;
        border-radius: 50%;
      }
    }
    .image{
      width: 100%;
      height: 100%;
    }
    .LiveNum{
      /* width:142/@p;
      height:40/@p; */
      display: inline-block;
      padding: 4px 8/@p;
      height: 28/@p;
      background:rgba(0,0,0,.5);
      border-radius:8/@p 0px 0px 0px;
      /* opacity:0.4; */
      position: absolute;
      bottom: 0;
      color: #fff;
      font-size: 20/@p;
      z-index: 1;
      right: 0;
    }
  }
  .LiveInfo{
    width: 445/@p;
    height: 100%;
    box-sizing: border-box;
    padding: 18/@p 10/@p 18/@p 18/@p;
    .LiveTitle{
      color: #111111;
      font-size: 34/@p;
      font-weight: 600;
      height: 48/@p;
      overflow: hidden;
      display: block;
      white-space: nowrap;
      text-overflow: ellipsis;
